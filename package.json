{
  "name": "ng-zorro-vscode",
  "displayName": "NG-ZORRO Snippets",
  "description": "Snippets based on NG-ZORRO",
  "version": "8.2.3",
  "icon": "ng-zorro.png",
  "publisher": "cipchk",
  "license": "MIT",
  "licenseUrl": "LICENSE",
  "scripts": {
    "build": "bash ./scripts/build/build.sh",
    "test": "bash ./scripts/build/build.sh -t",
    "release": "npm run resource && bash ./scripts/build/build.sh -b -p",
    "watch": "tsc -watch -p ./",
    "resource": "bash ./scripts/resource/build.sh",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "main": "./out/src/magic/extension",
  "homepage": "https://github.com/cipchk/ng-zorro-vscode/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/cipchk/ng-zorro-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/cipchk/ng-zorro-vscode/issues",
    "email": "cipchk@qq.com"
  },
  "engines": {
    "vscode": "^1.30.x"
  },
  "galleryBanner": {
    "color": "#ffffff",
    "theme": "light"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:html"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "html",
        "path": "./snippets.json"
      }
    ],
    "configuration": {
      "title": "NG-ZORRO Extension Configuration",
      "properties": {
        "ng-zorro-vscode.language": {
          "description": "Set language code, can be set 'zh-CN', 'en-US', default: 'en-US'",
          "type": "string",
          "default": "en-US"
        },
        "ng-zorro-vscode.hover": {
          "description": "Whether to enable hover, default: 'true'",
          "type": "boolean",
          "default": true
        },
        "ng-zorro-vscode.inlineTemplate": {
          "description": "Whether to enable support inline template in typescript file, default: 'true'",
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^12.0.10",
    "@types/mocha": "^5.2.5",
    "@types/chai": "^4.1.7",
    "@types/markdown-it": "^0.0.7",
    "ts-node": "^8.3.0",
    "mocha": "^6.1.4",
    "chai": "^4.2.0",
    "yaml-front-matter": "^4.0.0",
    "markdown-it": "^8.4.2",
    "vscode-snippet-generator": "^1.2.1",
    "vsce": "^1.65.0",
    "typescript": "^3.2.2",
    "vscode": "^1.1.26",
    "klaw-sync": "^6.0.0"
  }
}